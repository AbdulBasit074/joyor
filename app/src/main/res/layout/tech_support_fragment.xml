<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp"
            tools:ignore="HardcodedText,RtlSymmetry"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@drawable/border_support"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:autofillHints="Search"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@color/background_color"
                android:hint="Question1"
                android:layout_marginEnd="@dimen/_12sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:inputType="text" />
            <EditText
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:autofillHints="Search"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@color/background_color"
                android:hint="Question2"
                android:layout_marginEnd="@dimen/_12sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question1"
                android:inputType="text" />
            <EditText
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:autofillHints="Search"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@color/background_color"
                android:hint="Question3"
                android:layout_marginEnd="@dimen/_12sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question2"
                android:inputType="text" />
            <EditText
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:autofillHints="Search"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@color/background_color"
                android:hint="Question4"
                android:layout_marginEnd="@dimen/_12sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question3"
                android:inputType="text" />
            <EditText
                android:id="@+id/question5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:autofillHints="Search"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@color/background_color"
                android:hint="Question5"
                android:layout_marginEnd="@dimen/_12sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question4"
                android:inputType="text" />
            <EditText
                android:id="@+id/observation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:autofillHints="Search"
                android:gravity="start"
                android:fontFamily="@font/futura_medium_bt"
                android:background="@color/background_color"
                android:hint="Observations"
                android:layout_marginEnd="@dimen/_12sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question5"
                android:inputType="text" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="@id/formContainer"
            app:layout_constraintBottom_toTopOf="@id/formContainer"
            android:layout_width="@dimen/_130sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="@dimen/_60sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelTech"
                android:text="Tech support"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/light_reddish"
                android:fontFamily="@font/futura_bold_font"
                android:textAllCaps="true"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/sendBtn"
            android:text="Send"
            android:textColor="@color/white"
            android:background="@drawable/round_border_brown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/formContainer"
            app:layout_constraintTop_toBottomOf="@id/formContainer"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>