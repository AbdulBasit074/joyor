<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Joyor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_reddish</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/select_tab</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <!--  Date Picker Styles   -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/light_reddish</item>           <!-- Header Background -->
        <item name="android:colorAccent">@color/light_reddish</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:colorControlActivated">@color/light_reddish
        </item>        <!--selected day-->
        <!--        <item name="android:textColorPrimary">#89B5F6</item> &lt;!&ndash;days of the month&ndash;&gt;-->
        <!--        <item name="android:textColorSecondary">#0E3E85</item>    &lt;!&ndash;days of the week&ndash;&gt;-->
    </style>

    <!-- Date picker ok/cancel button styles    -->
    <style name="DialogButtonStyled" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:src">@drawable/ic_profile</item>
        <item name="android:background">@color/light_reddish</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <!-- For Search Dealer -->

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/futura_bold_font</item>
        <item name="android:textColor">@color/transparent_text</item>


    </style>

</resources>