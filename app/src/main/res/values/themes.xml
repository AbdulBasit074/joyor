<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Joyor" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_reddish</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/select_tab</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="MyActionBar.MenuTextStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:src">@drawable/ic_profile</item>
        <item name="android:background">@color/light_reddish</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>